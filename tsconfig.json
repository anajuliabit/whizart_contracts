{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node", "ethers"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ] /* List of folders to include type definitions from. */,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "scripts/*": ["src/scripts/*"],
      "helpers/*": ["./helpers/*"],
      "contracts/*": ["./contracts/*"],
      "tests/*": ["./tests/*"]
    }
  },
  "include": [
    "tasks",
    "scripts",
    "contracts",
    "test",
    "utils",
    "types",
    "deploy",
    ".openzeppelin"
  ],
  "exclude": ["node_modules"],
  "files": ["hardhat.config.ts"]
}
