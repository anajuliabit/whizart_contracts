{
  "plugins": ["prettier"],
  "rules": {
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "max-states-count": ["warn", 20],
    "prettier/prettier": "error",
    "two-lines-top-level-separator": false,
    "bracket-align": false,
    "event-name-camelcase": true,
    "compiler-version": ["error", "^0.8.2"],
    "no-empty-blocks": false,
    "indent": false,
    "no-mix-tabs-and-spaces": false,
    "state-visibility": "error"
  }
}
